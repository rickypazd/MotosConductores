<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Perfil_Conductor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_map_marker" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/ic_button_perfil"
            android:text="6.3"
            android:textColor="@color/colorWhite"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_estrella"
            android:textAlignment="center"
            android:textSize="40dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:paddingBottom="2dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="22dp"
            android:textColor="#9a50ef"
            android:text="Nombre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Nombre Nombre"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:paddingLeft="20dp"
            android:textColor="#9a50ef"
            android:textAlignment="textStart"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido Apellido Apellido"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de teléfono"
            android:paddingLeft="20dp"
            android:textColor="#9a50ef"
            android:textAlignment="textStart"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="75455232"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:textColor="#9a50ef"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siete@siete.com"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:paddingLeft="20dp"
            android:textColor="#9a50ef"
            android:textAlignment="textStart"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="***********234"
            android:paddingLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>